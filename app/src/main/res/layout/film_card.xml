<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/filmIcon"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width = "match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/filmTitle"
            android:paddingLeft="15dp"
            style="@style/TextColor"
            android:paddingBottom="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/release"
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/filmRelease"
            android:paddingLeft="15dp"
            style="@style/TextColor"
            android:paddingBottom="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/overview"
            style="@style/TextColor"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_below="@+id/filmOverview"
            android:layout_toEndOf="@+id/filmIcon"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/filmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/filmIcon"
            android:paddingBottom="5dp"
            android:text="Title:"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/filmRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filmTitle"
            android:layout_toEndOf="@+id/filmIcon"
            android:paddingBottom="5dp"
            android:text="Release Date:"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/filmOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filmRelease"
            android:layout_toEndOf="@+id/filmIcon"
            android:text="Overview:"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>